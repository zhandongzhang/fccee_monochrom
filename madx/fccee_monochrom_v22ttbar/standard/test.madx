set,format="-20s","23.17g";
option, update_from_parent=true, -echo, -info, -warn;

CALL, FILE="fccee_t.seq";

pbeam :=  182.5 ;
Ebeam := sqrt( pbeam^2 + emass^2 );
Nbun :=   40; NPar :=  2.37e11;
EXbeam = 1.49E-9; EYbeam = 2.98E-12;
HalfCrossingAngle = 0.015;

BEAM, PARTICLE=POSITRON, NPART=Npar, KBUNCH=Nbun, ENERGY=Ebeam, RADIATE=TRUE, BV=+1, EX=EXbeam, EY=EYbeam;

USE, SEQUENCE = FCCEE_P_RING;

TWISS, TAPERING, file="ring_standard_tapered.tfs";
plot, haxis=s, hmin=0, hmax=91175, vaxis1=betx,bety, vaxis2=dx, colour=100, range= #s/#e, title="V22 ttbar Ring Tapered", NOVERSION=true, file="ring_standard_tapered";
plot, haxis=s, vaxis1=betx,bety, vaxis2=dx, colour=100, range= ff1.1/fg.3, title="V22 ttbar IR1 Tapered", NOVERSION=true, file="ring_standard_tapered";
plot, haxis=s, vaxis1=betx,bety, vaxis2=dx, colour=100, range= ff1.2/fg.5, title="V22 ttbar IR2 Tapered", NOVERSION=true, file="ring_standard_tapered";
plot, haxis=s, vaxis1=betx,bety, vaxis2=dx, colour=100, range= ff1.3/fg.7, title="V22 ttbar IR3 Tapered", NOVERSION=true, file="ring_standard_tapered";
plot, haxis=s, vaxis1=betx,bety, vaxis2=dx, colour=100, range= fg.3/ff1.2, title="V22 ttbar ARC Tapered", NOVERSION=true, file="ring_standard_tapered";

system, "ps2pdf ring_standard_tapered.ps ring_standard_tapered.pdf";
system, "rm -f ring_standard_tapered.ps";

EMIT, DELTAP=0.0;
WRITE, TABLE=emit, FILE="emittab_standard.tfs";
WRITE, TABLE=emitsumm, FILE="emitsums_standard.tfs";