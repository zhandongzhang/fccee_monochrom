set,format="-20s","23.17g";
option, update_from_parent=true, -echo, -info, -warn;

CALL, FILE="ring_monochrom.seq";

pbeam :=  62.5 ;
Ebeam := sqrt( pbeam^2 + emass^2 );
Nbun :=   13420; NPar :=  0.559e11;
EXbeam = 2.5E-9; EYbeam = 2E-12;
HalfCrossingAngle = 0.015;

BEAM, PARTICLE=POSITRON, NPART=Npar, KBUNCH=Nbun, ENERGY=Ebeam, RADIATE=TRUE, BV=+1, EX=EXbeam, EY=EYbeam;

USE, SEQUENCE = monolattice;

TWISS, TAPERING, file="ring_monochrom_tapered.tfs";
plot, haxis=s, hmin=0, hmax=91175, vaxis1=betx,bety, vaxis2=dx, colour=100, title="MonochroM Ring Tapered", NOVERSION=true, file="ring_monochrom_tapered";
plot, haxis=s, vaxis1=betx,bety, vaxis2=dx, colour=100, range= ff1.1/fg.3, title="MonochroM IR1 Tapered", NOVERSION=true, file="ring_monochrom_tapered";
plot, haxis=s, vaxis1=betx,bety, vaxis2=dx, colour=100, range= ff1.2/fg.5, title="MonochroM IR2 Tapered", NOVERSION=true, file="ring_monochrom_tapered";
plot, haxis=s, vaxis1=betx,bety, vaxis2=dx, colour=100, range= ff1.3/fg.7, title="MonochroM IR3 Tapered", NOVERSION=true, file="ring_monochrom_tapered";
plot, haxis=s, vaxis1=betx,bety, vaxis2=dx, colour=100, range= ff1.4/fg.1, title="MonochroM IR4 Tapered", NOVERSION=true, file="ing_monochrom_tapered";
plot, haxis=s, vaxis1=betx,bety, vaxis2=dx, colour=100, range= fg.3/ff1.2, title="MonochroM ARC Tapered", NOVERSION=true, file="ring_monochrom_tapered";

system, "ps2pdf ring_monochrom_tapered.ps ring_monochrom_tapered.pdf";
system, "rm -f ring_monochrom_tapered.ps";

EMIT, DELTAP=0.0;
WRITE, TABLE=emit, FILE="emittab_monochrom.tfs";
WRITE, TABLE=emitsumm, FILE="emitsums_monochrom.tfs";